{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Error",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "description": "Error code"
    },
    "message": {
      "type": "string",
      "description": "Error message"
    },
    "details": {
      "type": "object",
      "description": "Additional error details"
    }
  },
  "required": ["code", "message"]
}
